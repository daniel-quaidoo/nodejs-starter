{
    "name": "nodejs-starter",
    "version": "1.0.0",
    "description": "Minimal Node.js TypeScript starter with AWS Lambda",
    "main": "dist/app.js",
    "engines": {
        "node": ">=18.0.0"
    },
    "scripts": {
        "build": "tsc",
        "build:watch": "tsc -w",
        "start": "node dist/app.js",
        "start:dev": "ts-node-dev --respawn --transpile-only src/app.ts",
        "dev": "cross-env NODE_ENV=development ts-node-dev --respawn --transpile-only src/app.ts",
        "serverless": "NODE_ENV=development npx tsc && NODE_ENV=development npx serverless offline --config serverless.yml",
        "serverless:prod": "NODE_ENV=production npx tsc && NODE_ENV=production npx serverless offline --config serverless.yml",
        "sam": "NODE_ENV=development npm run build && NODE_ENV=development sam build && NODE_ENV=development sam local invoke RouteHandlerFunction -e events/post.json",
        "sam:local:api": "NODE_ENV=development npm run build && NODE_ENV=development sam build && NODE_ENV=development sam local start-api --template-file template.yaml --env-vars env.json",
        "lint": "eslint . --ext .ts --fix",
        "format": "prettier --write \"**/*.{ts,js,json,md}\"",
        "prepare": "husky",
        "test": "jest --passWithNoTests --config=jest.config.js",
        "test:watch": "jest --watch --config=jest.config.js",
        "test:coverage": "jest --coverage --config=jest.config.js",
        "migrate:generate": "ts-node ./node_modules/typeorm/cli.js migration:generate",
        "migrate:run": "ts-node ./node_modules/typeorm/cli.js migration:run",
        "migrate:revert": "ts-node ./node_modules/typeorm/cli.js migration:revert",
        "typeorm": "ts-node ./node_modules/typeorm/cli.js",
        "clean": "rimraf dist",
        "prestart": "npm run build",
        "predeploy": "npm run clean && npm run build"
    },
    "keywords": [
        "nodejs",
        "typescript",
        "aws-lambda",
        "serverless"
    ],
    "author": "Your Name",
    "license": "MIT",
    "dependencies": {
        "@aws-sdk/client-lambda": "^3.540.0",
        "@aws-sdk/client-s3": "^3.540.0",
        "@aws-sdk/client-secrets-manager": "^3.540.0",
        "@types/bcrypt": "^5.0.2",
        "@types/http-status-codes": "^1.2.0",
        "@types/joi": "^17.2.3",
        "@types/passport-jwt": "^4.0.1",
        "@types/passport-local": "^1.0.38",
        "@types/uuid": "^10.0.0",
        "aws-lambda-router": "^0.9.0",
        "bcrypt": "^6.0.0",
        "class-transformer": "^0.5.1",
        "class-validator": "^0.14.2",
        "compression": "^1.8.0",
        "cors": "^2.8.5",
        "dotenv": "^16.5.0",
        "express": "^4.17.1",
        "express-session": "^1.18.1",
        "helmet": "^7.1.0",
        "http-status-codes": "^2.3.0",
        "joi": "^17.13.3",
        "jsonwebtoken": "^9.0.2",
        "morgan": "^1.10.0",
        "passport": "^0.7.0",
        "passport-jwt": "^4.0.1",
        "passport-local": "^1.0.0",
        "pg": "^8.11.3",
        "reflect-metadata": "^0.2.2",
        "rxjs": "^7.8.2",
        "serverless": "4.17.0",
        "typedi": "^0.10.0",
        "typeorm": "^0.3.20",
        "uuid": "^11.1.0",
        "winston": "^3.17.0"
    },
    "devDependencies": {
        "@types/aws-lambda": "^8.10.149",
        "@types/cors": "^2.8.19",
        "@types/express": "^4.17.17",
        "@types/express-session": "^1.18.2",
        "@types/helmet": "^4.0.0",
        "@types/jest": "^29.5.14",
        "@types/jsonwebtoken": "^9.0.9",
        "@types/morgan": "^1.9.9",
        "@types/node": "^20.19.0",
        "@types/passport-jwt": "^4.0.1",
        "@types/pg": "^8.10.9",
        "@types/prettier": "^3.0.0",
        "@types/supertest": "^2.0.16",
        "@types/validator": "^13.11.3",
        "@typescript-eslint/eslint-plugin": "^8.34.0",
        "@typescript-eslint/parser": "^8.34.0",
        "cross-env": "^7.0.3",
        "eslint": "^8.45.0",
        "eslint-config-prettier": "^9.0.0",
        "eslint-plugin-prettier": "^5.0.0",
        "husky": "^9.1.7",
        "jest": "^29.7.0",
        "lint-staged": "^15.0.0",
        "nodemon": "^3.0.2",
        "prettier": "^3.0.0",
        "serverless-esbuild": "^1.55.1",
        "serverless-offline": "^14.4.0",
        "supertest": "6.3.4",
        "ts-jest": "^29.3.4",
        "ts-node": "^10.9.2",
        "ts-node-dev": "^2.0.0",
        "tsconfig-paths": "^4.2.0",
        "typeorm-extension": "3.7.1",
        "typescript": "^5.8.3"
    },
    "jest": {
        "coverageThreshold": {
            "global": {
                "branches": 80,
                "functions": 80,
                "lines": 80,
                "statements": 80
            }
        }
    },
    "lint-staged": {
        "*.{js,ts,json,md}": [
            "prettier --write"
        ],
        "*.{js,ts}": [
            "eslint --fix"
        ]
    },
    "prettier": {
        "semi": true,
        "singleQuote": true,
        "printWidth": 100,
        "tabWidth": 4,
        "trailingComma": "es5",
        "bracketSpacing": true,
        "arrowParens": "avoid"
    }
}
